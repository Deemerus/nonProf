import java.io.File;
import java.io.FileNotFoundException;
import java.util.HashMap;
import java.util.Map;
import java.util.Scanner;

public class App {

	public static void main(String[] args) {
		Node node = new Node();
		node.addNeighbour(new Neighbour(3, 4));
		Map<Integer, Node> nodes = new HashMap<Integer, Node>();
		nodes.put(1, node);
		nodes.get(1).printNeighbours();
		
		
		try(Scanner scanner = new Scanner(new File("graph2"))){
			while(scanner.hasNext()){
				int nid = scanner.nextInt()*1000+scanner.nextInt();
				int id=0;
				String next = scanner.next();
				if(next.equals("-")){
					id=nid;
					nodes.put(id, new Node());	
					System.out.println("creating new node");
				}else{
					//nodes.get(id).addNeighbour(new Neighbour(nid, Integer.parseInt(next)));
					node.addNeighbour(new Neighbour(nid, Integer.parseInt(next)));
				}
				System.out.println(id);
				nodes.get(id).printNeighbours();
			}
		} catch (FileNotFoundException e) {
			System.out.println("File graph2 not found.");
		}
		nodes.get(23141).printNeighbours();
		

	}
}
