import java.util.ArrayList;
import java.util.List;
import java.util.Map;

public class Node {
	List<Neighbour> neighbours = new ArrayList<Neighbour>();
	int value = 0;

	public void addNeighbour(Neighbour neighbour) {
		neighbours.add(neighbour);
	}

	public void printNeighbours() {
		for (Neighbour neighbour : neighbours) {
			System.out.println(neighbour.getDistance());
		}
	}

	public void countDistance(Map<Integer, Node> nodes, int id) {
		for(Neighbour neighbour: neighbours){
			if(nodes.get(neighbour.getID()).value==0||nodes.get(neighbour.getID()).value>this.value+neighbour.getDistance()){
				nodes.get(neighbour.getID()).value=this.value+neighbour.getDistance();
				countDistance(nodes, neighbour.getID(),distance);
			}
		}
	}

}